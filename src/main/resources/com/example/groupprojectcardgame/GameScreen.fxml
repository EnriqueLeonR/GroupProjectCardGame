<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.groupprojectcardgame.GameScreenController">
    <ImageView fitHeight="615.0" fitWidth="800.0" preserveRatio="true">
        <image>
            <Image url="@images/tableView.jpg" />
        </image>
    </ImageView>
    <BorderPane>
        <top>
            <HBox fx:id="topRow" spacing="10" style="-fx-padding: 20;" alignment="CENTER"/>
        </top>
        <bottom>
            <HBox fx:id="bottomRow" spacing="10" style="-fx-padding: 20;" alignment="CENTER"/>
        </bottom>
        <right>
            <VBox fx:id="rightDeck" spacing="10" style="-fx-padding: 20;" alignment="CENTER">
                <Button text="Deck" prefWidth="80" prefHeight="120"/>
            </VBox>
        </right>
    </BorderPane>
</StackPane>
